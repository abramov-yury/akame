div.popup
  div.popup__picture-wrapper
  //- the place for a masterpiece
  div.popup__controls-wrapper
    button.popup__button.popup__button--cross(type="button")
      svg(viewBox="0 0 18 18" width="18" height="18" role="presentation" aria-hidden="true")
        use(href="#cross-icon")
    button.popup__button.popup__button--back-arrow(type="button")
      svg(viewBox="0 0 12 14" width="12" height="14" role="presentation" aria-hidden="true")
        use(href="#back-arrow-icon")
    button.popup__button.popup__button--forward-arrow(type="button")
      svg(viewBox="0 0 12 14" width="12" height="14" role="presentation" aria-hidden="true")
        use(href="#back-arrow-icon")
    button.popup__button.popup__button--scale(type="button")
      svg.popup__plus-icon(viewBox="0 0 16 16" width="16" height="16" role="presentation" aria-hidden="true")
        use(href="#plus-icon")
      svg.popup__minus-icon(viewBox="0 0 16 2" width="16" height="2" role="presentation" aria-hidden="true")
        use(href="#minus-icon")
