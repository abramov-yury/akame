include ../logo/logo
include ../social/social
include ../copyright/copyright
include ../../templates/helpers

+helpers

-
  let name = "navigation"
  points = require("./navigation.json")

nav(class=name)
  button(class=`${name}__switch` type="button")
    svg(viewBox='0 0 17.4 17.4' width="30" height="30" role="presentation" aria-hidden="true")
      path(d='m7.3 1.4 6.3 6.3H0v2h13.6L7.3 16l1.4 1.4 8.7-8.7L8.7 0z')
  +logo(name)

  div(class=`${name}__content`)

    ul(class=`${name}__list`)
      each item in points
        li(class=`${name}__item`)
          - linkClassName = item.active ? `${name}__link ${name}__link--active` : `${name}__link`
          a(class=linkClassName href="#" data-point=item.value) #{item.text}

    +social(name, "flat")
    +copyright
