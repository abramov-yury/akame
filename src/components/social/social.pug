mixin social(parent)

  -
    name = "social"
    className = getClassName(name, parent)

  ul(class=className)
    li(class=`${name}__item`)
      a(class=`${name}__link` href="#" aria-label="Facebook")
        svg(class=`${name}__icon` viewBox="0 0 26 51" width="26" height="51" fill="#FFF" role="presentation" aria-hidden="true")
          use(href="#facebook-icon")
    li(class=`${name}__item`)
      a(class=`${name}__link` href="#" aria-label="Twitter")
        svg(class=`${name}__icon` viewBox="0 0 48 39" width="48" height="39" fill="#FFF" role="presentation" aria-hidden="true")
          use(href="#twitter-icon")
    li(class=`${name}__item`)
      a(class=`${name}__link` href="#" aria-label="Linkedin")
        svg(class=`${name}__icon` viewBox="0 0 44 41" width="44" height="41" fill="#FFF" role="presentation" aria-hidden="true")
          use(href="#linkedin-icon")
    li(class=`${name}__item`)
      a(class=`${name}__link` href="#" aria-label="Instagram")
        svg(class=`${name}__icon` viewBox="0 0 47 47" width="47" height="47" fill="#FFF" role="presentation" aria-hidden="true")
          use(href="#instagram-icon")
