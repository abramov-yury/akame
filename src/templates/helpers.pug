mixin helpers

  -
    getClassName = (name, parent) => (
            parent ? `${parent}__${name} ${name}` : name
    );

    ucFirst = (str) => {

      if (!str) return str;
      return str[0].toUpperCase() + str.slice(1);

    };

    shuffle = (arr) => {
      for (let i = arr.length - 1; i > 0; i--) {
        let j = Math.floor(Math.random() * (i + 1));
        [arr[i], arr[j]] = [arr[j], arr[i]];
      }
    }
